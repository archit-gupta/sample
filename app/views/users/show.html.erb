<style>
  .nvd3 .nv-groups .nv-point {
    stroke-opacity: 0.5 !important;
    stroke-width: 10px;
}
</style>

<div style="padding-top: 20px; width: 1024px; margin: auto" class="row">
    <table style="width: 40%; float: left" class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="info">
          <td>Class 9A</td>
          <td>FA1</td>
          <td>FA2</td>
          <td>SA1</td>
        </tr>
      </thead>
      <tbody>
        <% @users.select{ |user| user.class_name == "9A" }.each do |user| %>
          <tr>
            <td><%= link_to user.name, selected_user_path(user.id) %></td>
            <td><%= user.test_fa1 %></td>
            <td><%= user.test_fa2 %></td>
            <td><%= user.test_sa1 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <table style="width: 40%; float: right" class="table table-striped table-bordered table-hover">
      <thead>
        <tr class="info">
          <td>Class 9B</td>
          <td>FA1</td>
          <td>FA2</td>
          <td>SA1</td>
        </tr>
      </thead>
      <tbody>
        <% @users.select{ |user| user.class_name == "9B" }.each do |user| %>
          <tr>
            <td><%= link_to user.name, selected_user_path(user.id) %></td>
            <td><%= user.test_fa1 %></td>
            <td><%= user.test_fa2 %></td>
            <td><%= user.test_sa1 %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div id="chart" style="height: 400px;">
    <svg></svg>
</div>

<script>
  nv.addGraph(function() {
    var chart = nv.models.lineChart()
                          .margin({left: 100})
                          .forceY([0,100])
                          .useInteractiveGuideline(true)
                          .transitionDuration(350) 
                          .showLegend(true)
                          .showYAxis(true)
                          .showXAxis(true) 

    chart.xAxis //Chart x-axis settings
        .axisLabel('Tests')
        .tickFormat(x_format);

    chart.yAxis //Chart y-axis settings
        .axisLabel('Percentage')
        .tickValues([0,20,40,60,80,100])
        .tickFormat(d3.format(',r'));

    var myData = test_data();
    d3.select('#chart svg') 
      .datum(myData)
      .transition().duration(500)
      .call(chart); 

    nv.utils.windowResize(function() { chart.update() });
    return chart;
  });

  var x_format = function(num) {
      if (num === 0)
          return "FA1";
      else if (num === 1)
          return "FA2";
      else if (num === 2)
          return "FA3";
  };

  function test_data() {
      var line1 = [],
          line2 = [],
          line3 = [],
          line4 = []

        <% @class_9.each_with_index do |(key,value),index| %>
          line1.push({x: <%= index %>, y: <%= value %>});
        <% end %>

        <% @class_9a.each_with_index do |(key,value),index| %>
          line2.push({x: <%= index %>, y: <%= value %>});
        <% end %>

         <% @class_9b.each_with_index do |(key,value),index| %>
          line3.push({x: <%= index %>, y: <%= value %>});
        <% end %>

        <% if @selected_user.present? %>
          <% @selected_user.each_with_index do |(key,value),index| %>
            line4.push({x: <%= index %>, y: <%= value %>});
          <% end %>
        <% end %>
  
      return [{
        values: line1,
        key: 'Class 9', 
        color: '#ff7f0e'
        },{
        values: line2,
        key: 'Class 9a', 
        color: '#2ca02c'
        },{
        values: line3,
        key: 'Class 9b', 
        color: '#7777ff'
        }
        <% if @user.present? %>
          ,{
            values: line4,
            key: '<%= @user.first.name %>', 
            color: '#F70000'
            }
        <% end %>];
  }

</script>